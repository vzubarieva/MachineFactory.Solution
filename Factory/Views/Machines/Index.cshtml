@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No machine have been added yet!</h3>
}
<ul>
  @foreach (Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.Type}", "Details", new { id = machine.MachineId }) </li>
  }
</ul>
<p>@Html.ActionLink("Add new machine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("See all machines", "Index", "Machines")</p>